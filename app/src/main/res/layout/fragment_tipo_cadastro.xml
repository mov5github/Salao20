<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="Selecione o tipo de cadastro :"
        android:gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/label_cadastro_cliente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Cliente"
            android:layout_marginTop="7dp"
            android:layout_centerHorizontal="true" />

        <ImageButton
            android:id="@+id/btn_cadastro_cliente"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher"
            android:background="#00000000"
            android:contentDescription="btnChamarCadastroCliente"
            android:onClick="confirmarTipoCadastro"
            android:layout_centerInParent="true"
            android:layout_below="@+id/label_cadastro_cliente"/>

        <TextView
            android:id="@+id/descricao_cadastro_cliente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="Para ter acesso a agenda dos sal천es cadastrados."
            android:layout_marginTop="7dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/btn_cadastro_cliente"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/label_cadastro_salao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Sal찾o"
            android:layout_marginTop="7dp"
            android:layout_centerHorizontal="true" />

        <ImageButton
            android:id="@+id/btn_cadastro_salao"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher"
            android:background="#00000000"
            android:contentDescription="btnChamarCadastroSalao"
            android:onClick="confirmarTipoCadastro"
            android:layout_centerInParent="true"
            android:layout_below="@+id/label_cadastro_salao"/>

        <TextView
            android:id="@+id/descricao_cadastro_salao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="Para abrir um sal찾o online."
            android:layout_marginTop="7dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/btn_cadastro_salao"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/label_cadastro_cabeleireiro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Cabeleireiro"
            android:layout_marginTop="7dp"
            android:layout_centerHorizontal="true" />

        <ImageButton
            android:id="@+id/btn_cadastro_cabeleireiro"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher"
            android:background="#00000000"
            android:contentDescription="btnChamarCadastroCabeleireiro"
            android:onClick="confirmarTipoCadastro"
            android:layout_centerInParent="true"
            android:layout_below="@+id/label_cadastro_cabeleireiro"/>

        <TextView
            android:id="@+id/descricao_cadastro_cabeleireiro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="Para profissionais que ocuparam uma vaga em um sal찾o online."
            android:layout_marginTop="7dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/btn_cadastro_cabeleireiro"/>
    </RelativeLayout>

</TableLayout>